@model Homestay1.Models.Room

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Thêm phòng";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="HomestayID" class="form-label">Homestay</label>
        <select asp-for="HomestayID" asp-items="ViewBag.Homestays" class="form-select">
            <option value="">-- Chọn homestay --</option>
        </select>
        <span asp-validation-for="HomestayID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RoomName" class="form-label">Tên phòng</label>
        <input asp-for="RoomName" class="form-control" placeholder="Nhập tên phòng" />
        <span asp-validation-for="RoomName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PricePerNight" class="form-label">Giá mỗi đêm</label>
        <input asp-for="PricePerNight" class="form-control" placeholder="Nhập giá mỗi đêm" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label">Trạng thái</label>
        <select asp-for="Status" class="form-select">
            <option value="">-- Chọn trạng thái --</option>
            <option value="Available">Còn trống</option>
            <option value="Occupied">Đã đặt</option>
            <option value="Maintenance">Bảo trì</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Link ảnh</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Dán link ảnh phòng" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success"><i class="bi bi-save me-1"></i> Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
